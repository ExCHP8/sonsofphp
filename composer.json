{
    "name": "sonsofphp/sonsofphp",
    "type": "library",
    "description": "Sons of PHP Mother Repo",
    "keywords": [
        "php",
        "sons of php",
        "mother repo"
    ],
    "homepage": "https://github.com/SonsOfPHP",
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Estes",
            "email": "joshua@sonsofphp.com"
        }
    ],
    "support": {
        "issues": "https://github.com/SonsOfPHP/sonsofphp/issues",
        "forum": "https://github.com/orgs/SonsOfPHP/discussions",
        "docs": "https://docs.sonsofphp.com"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/JoshuaEstes"
        },
        {
            "type": "tidelift",
            "url": "https://tidelift.com/subscription/pkg/packagist-sonsofphp-sonsofphp"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "provide": {
        "psr/event-dispatcher-implementation": "1.0",
        "psr/clock-implementation": "1.0"
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "psr/event-dispatcher": "^1.0",
        "doctrine/dbal": "^3",
        "symfony/options-resolver": "^5|^6",
        "symfony/uid": "^5|^6",
        "symfony/console": "^4|^5|^6",
        "symfony/dotenv": "^6",
        "symfony/finder": "^6",
        "symfony/process": "^6"
    },
    "replace": {
        "sonsofphp/bard": "self.version",
        "sonsofphp/clock": "self.version",
        "sonsofphp/cqrs": "self.version",
        "sonsofphp/event-dispatcher": "self.version",
        "sonsofphp/event-sourcing": "self.version",
        "sonsofphp/event-sourcing-doctrine": "self.version",
        "sonsofphp/event-sourcing-symfony": "self.version",
        "sonsofphp/feature-toggle": "self.version",
        "sonsofphp/json": "self.version",
        "sonsofphp/money": "self.version",
        "sonsofphp/version": "self.version"
    },
    "autoload": {
        "psr-4": {
            "SonsOfPHP\\Bard\\": "packages/bard/src",
            "SonsOfPHP\\Component\\Clock\\": "packages/clock",
            "SonsOfPHP\\Component\\Cqrs\\": "packages/cqrs",
            "SonsOfPHP\\Component\\EventDispatcher\\": "packages/event-dispatcher",
            "SonsOfPHP\\Component\\EventSourcing\\": "packages/event-sourcing",
            "SonsOfPHP\\Component\\EventSourcing\\Bridge\\Doctrine\\": "packages/event-sourcing-doctrine",
            "SonsOfPHP\\Component\\EventSourcing\\Bridge\\Symfony\\": "packages/event-sourcing-symfony",
            "SonsOfPHP\\Component\\FeatureToggle\\": "packages/feature-toggle",
            "SonsOfPHP\\Component\\Json\\": "packages/json",
            "SonsOfPHP\\Component\\Money\\": "packages/money",
            "SonsOfPHP\\Component\\Version\\": "packages/version"
        },
        "exclude-from-classmap": [
            "packages/bard/Tests",
            "packages/clock/Tests",
            "packages/cqrs/Tests",
            "packages/event-dispatcher/Tests",
            "packages/event-sourcing/Tests",
            "packages/event-sourcing-doctrine/Tests",
            "packages/event-sourcing-symfony/Tests",
            "packages/feature-toggle/Tests",
            "packages/json/Tests",
            "packages/money/Tests",
            "packages/version/Tests"
        ]
    },
    "extra": {
        "sort-packages": true,
        "branch-alias": {
            "dev-main": "0.2.x-dev"
        }
    },
    "require-dev": {
        "symfony/messenger": "^5|^6",
        "symfony/http-foundation": "^5",
        "symfony/security": "^4"
    },
    "autoload-dev": {
        "psr-4": {
            "SonsOfPHP\\Bard\\Tests\\": "packages/bard/Tests"
        }
    }
}