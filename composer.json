{
    "name": "sonsofphp/sonsofphp",
    "type": "library",
    "description": "Sons of PHP Mother Repo",
    "keywords": [
        "php",
        "sons of php",
        "mother repo"
    ],
    "homepage": "https://github.com/SonsOfPHP",
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Estes",
            "email": "joshua@sonsofphp.com"
        }
    ],
    "support": {
        "issues": "https://github.com/SonsOfPHP/sonsofphp/issues",
        "forum": "https://github.com/orgs/SonsOfPHP/discussions"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "provide": {
        "psr/event-dispatcher-implementation": "1.0",
        "psr/clock-implementation": "1.0"
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "psr/event-dispatcher": "^1.0",
        "doctrine/dbal": "^3.3",
        "symfony/options-resolver": "^5.4|^6.0",
        "symfony/uid": "^5.4|^6.0"
    },
    "replace": {
        "sonsofphp/clock": "self.version",
        "sonsofphp/cqrs": "self.version",
        "sonsofphp/event-dispatcher": "self.version",
        "sonsofphp/event-sourcing": "self.version",
        "sonsofphp/feature-toggle": "self.version",
        "sonsofphp/json": "self.version",
        "sonsofphp/money": "self.version",
        "sonsofphp/version": "self.version"
    },
    "autoload": {
        "psr-4": {
            "SonsOfPHP\\Component\\Clock\\": "packages/component/clock",
            "SonsOfPHP\\Component\\Cqrs\\": "packages/component/cqrs",
            "SonsOfPHP\\Component\\EventDispatcher\\": "packages/component/event-dispatcher",
            "SonsOfPHP\\Component\\EventSourcing\\": "packages/component/event-sourcing",
            "SonsOfPHP\\Component\\FeatureToggle\\": "packages/component/feature-toggle",
            "SonsOfPHP\\Component\\Json\\": "packages/component/json",
            "SonsOfPHP\\Component\\Money\\": "packages/component/money",
            "SonsOfPHP\\Component\\Version\\": "packages/component/version"
        },
        "exclude-from-classmap": [
            "**/Tests/"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.1.x-dev"
        }
    },
    "suggest": {
        "symfony/messenger": "Use with CQRS & Event Sourcing component to handle commands & events in the asynchronously.",
        "symfony/uid": "Use with Event Sourcing component to generate UUIDs and ULIDs"
    },
    "require-dev": {
        "symfony/messenger": "^5.4|^6.0",
        "symfony/http-foundation": "^5.4",
        "symfony/security": "^4.4"
    }
}
